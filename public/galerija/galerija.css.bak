.naslovGalerije{
	position:absolute;
	font-size:3vw;
	color:white;
	font-family:gothic;
	width:100%;
	height:4vw;
	top:0;
	left:0;
	text-align:center;
	font-weight:bold;
}

.categoryHolder{
	position:relative;
	margin:6vw 5vw;
	width:90vw;
	height:auto;
	padding:0;
	display:flex;
	flex-direction:row;
	justify-content: space-between;
}

.categoryDiv{
	position:relative;
	float:left;
	width:25vw;
	border: solid white 10px;
}

.categoryDiv:hover{
	border:solid #F08113 10px;
}

@media screen and (max-width:900px){
	.categoryHolder{
		flex-direction:column;
		width:60vw;
		margin:7vh 15vw;
	}
	
	.categoryDiv{
		width:100%;
		margin:2vh;
		border: solid white 1vh;
	}
	
	.naslovGalerije{
		font-size:5vh;
		top:1vh;
	}
.rtriangle{
	position:absolute;
	top:-10vh;
	left:-80vh;
	width:0; 
	height:0; 
	border-left: 80vh solid transparent;
	border-right: 80vh solid transparent;
	border-top: 80vh solid #F08113;
	border-bottom: 80vh solid transparent;
}

.rtriangle2{
	position:absolute;
	top:0vh;
	left:-50vh;
	width:0; 
	height:0; 
	border-left: 50vh solid transparent;
	border-right: 50vh solid transparent;
	border-top: 50vh solid #F6B676;
	border-bottom: 50vh solid transparent;
}

@-webkit-keyframes trianim1{
	0%{top:-105vh;left:-110vh}
	80%{top:-5vh;left:-80vh;}
	100%{top:-10vh;left:-85vh;}
}

@-webkit-keyframes trianim2{
	0%{top:-45vh;left:-90vh}
	80%{top:0vh;left:-50vh;}
	100%{top:-10vh;left:-50vh;}
}

@keyframes trianim1{
	0%{top:-105vh;left:-110vh}
	80%{top:-5vh;left:-80vh;}
	100%{top:-10vh;left:-85vh;}
}

@keyframes trianim2{
	0%{top:-45vh;left:-90vh}
	80%{top:0vh;left:-50vh;}
	100%{top:-10vh;left:-50vh;}
}
}